{
  "extends": [
    "eslint:recommended",
    "plugin:eslint-plugin/recommended",
    "plugin:node/recommended",
    "plugin:@shopify/typescript",
    "plugin:@shopify/typescript-type-checking",
    "plugin:@shopify/prettier",
    "plugin:@shopify/node"
  ],
  "rules": {
    "prettier/prettier": "warn"
  },
  "env": {
    "node": true
  },
  "parserOptions": {
    "project": "./tsconfig.eslint.json"
  },
  "overrides": [
    {
      "files": ["test/**/*.test.?s"],
      "env": {
        "jest": true
      }
    }
  ]
}
