{
  "name": "@bepower/eslint-plugin",
  "version": "1.0.5",
  "description": "Opinionated eslint configuration (mostly Shopify's)",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "files": [
    "/dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BePower/code-style.git",
    "directory": "packages/eslint-plugin"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslintconfig",
    "eslint-plugin",
    "eslint-config"
  ],
  "author": "BePower",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BePower/code-style/issues"
  },
  "homepage": "https://github.com/BePower/code-style#readme",
  "scripts": {
    "check": "npm run lint && npm run format",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier -l .",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "pretest": "npm run build",
    "test": "jest"
  },
  "dependencies": {
    "@shopify/eslint-plugin": "^42.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "eslint": "^8.41.0",
    "eslint-plugin-eslint-plugin": "^5.1.0",
    "jest": "^29.5.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "eslint": "^8.41.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
