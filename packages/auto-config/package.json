{
  "name": "@bepower/auto-config",
  "version": "0.5.0",
  "description": "Common configuration and dependencies for npm deploy via auto package",
  "main": "./auto.config.js",
  "scripts": {
    "prebuild": "rimraf scripts/*.js ./*.js coverage",
    "build": "tsc",
    "pretest": "npm run prebuild",
    "test": "jest"
  },
  "keywords": [
    "auto",
    "auto-config",
    "npm",
    "deploy"
  ],
  "author": "BePower",
  "license": "MIT",
  "dependencies": {
    "@auto-it/all-contributors": "^10.46.0",
    "@auto-it/conventional-commits": "^10.46.0",
    "@auto-it/core": "^10.46.0",
    "@auto-it/first-time-contributor": "^10.46.0",
    "@auto-it/magic-zero": "^10.46.0",
    "auto": "^10.46.0",
    "lerna": "^6.6.2"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.4",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.2.5",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "clover",
      "json",
      "json-summary",
      "lcov",
      "text",
      "text-summary"
    ]
  },
  "auto": {
    "plugins": [
      "magic-zero",
      "npm",
      [
        "conventional-commits",
        {
          "preset": "angular"
        }
      ],
      "all-contributors",
      "first-time-contributor"
    ]
  }
}
